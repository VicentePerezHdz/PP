@using System.Data
@model DataTable
@{
    ViewBag.Title = "Cursos Calificaciones";
}

<h2>CursosCalificaciones</h2>


@{
    ViewBag.Title = "Consulta de Calificaciones Conduit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">Consulta de Resultados Conduit</h2>
<form id="FrmBuscar" method="post">
    <table align="center" class="table table-striped">
        <tr align="center">
            @foreach (DataColumn col in Model.Columns)
            {

                <th scope="col" align="center">

                    @if (col.Caption.Equals("grades_Id"))
                    {
                        ViewBag.Message = "hola";
                    }
                    else
                    {
                        @col.Caption;
                    }
                </th>
            }
        </tr>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr align="center">
                    @foreach (var cell in row.ItemArray)
                    {
                        if (cell != null)
                        {

                            <td scope="col">@cell.ToString()</td>
                        }

                    }
                </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="row">


            </div>
        </div>

    </div>
</form>
